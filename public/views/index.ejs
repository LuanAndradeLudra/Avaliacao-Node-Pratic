<%- include("./partials/header") %>
    <% capitalize=function(string){ %>
        <% return string.charAt(0).toUpperCase() + string.slice(1); %>
    <% } %>
    <% reduce = function(string){ %>
        <% if(string.length >= 40){ %>
        <% return `${string.substring(0, 40)}...`; %>
        <% } else { %>
        <% return string %>
        <% } %>
    <% } %>
                <div class="container">

                    <!-- Jumbotron Header-->
                    <header class="jumbotron my-4" style="background-color: rgba(128, 128, 128, 0.267); padding: 32px">
                        <h1 class="display-3">Bem vindo!</h1>
                        <p class="lead">Seja bem vindo ao meu projeto pessoal para avaliação!</p>
                    </header>
                    <!-- Posts-->
                </div>
                <div class="container">
                    <div class="row mb-2">
                        <% posts.forEach((post)=> { %>
                            <div class="col-md-12">
                                <div class="card flex-md-row mb-4 box-shadow h-md-250">
                                    <div class="card-body d-flex flex-column align-items-start">
                                        <h3 class="mb-2">
                                            <%- capitalize(post.title) %>
                                        </h3>
                                        <p class="card-text mb-2"><%- reduce(post.body)%></p>
                                        <a href="/post/<%=post.id%>">Saiba mais</a>
                                    </div>
                                </div>
                                <% }) %>

                            </div>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col col-12">
                    <% if(next){ %>
                    <a href="/?page=<%=page + 1%>" class="btn btn-primary" style="float: right;">Próximo <i class="fas fa-angle-double-right"></i></a>
                    <% } %>
                    <% if(before){ %>
                        <a href="/?page=<%=page-1%>" class="btn btn-primary" style="float: left;"><i class="fas fa-angle-double-left"></i> Anterior</a>
                    <% } %>
                    </div>
                </div>

                
<%- include("./partials/footer") %>